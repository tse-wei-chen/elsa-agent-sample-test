{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Launch (ElsaServer)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ElsaServer/bin/Debug/net8.0/ElsaServer.dll",
            "args": [],
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "cwd": "${workspaceFolder}/ElsaServer",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/ElsaServer/Views"
            }
        }
    ]
}